package {
    // See: http://go/android-license-faq
    // A large-scale-change added 'default_applicable_licenses' to import
    // all of the 'license_kinds' from "external_avb_license"
    // to get the below license kinds:
    //   SPDX-license-identifier-Apache-2.0
    //   SPDX-license-identifier-MIT
    default_applicable_licenses: ["external_avb_license"],
}

python_test_host {
    name: "at_auth_unlock_unittest",
    main: "at_auth_unlock_unittest.py",
    srcs: [
        "at_auth_unlock_unittest.py",
    ],
    libs: [
        "at_auth_unlock",
    ],
    data: [
        "data/atx_pik_certificate.bin",
        "data/atx_puk_certificate.bin",
        "data/atx_unlock_challenge.bin",
        "data/atx_unlock_credential.bin",
        "data/testkey_atx_puk.pem",
    ],
    test_config: "at_auth_unlock_unittest.xml",
}

filegroup {
    name: "avb_testkey_rsa4096",
    srcs: ["data/testkey_rsa4096.pem"],
}

filegroup {
    name: "avb_testkey_rsa4096_pub_bin",
    srcs: ["data/testkey_rsa4096_pub.bin"],
}

filegroup {
    name: "avb_testkey_rsa2048",
    srcs: ["data/testkey_rsa2048.pem"],
}

rust_library_rlib {
    name: "libavb_test_data",
    edition: "2021",
    crate_name: "avb_test_data",
    srcs: ["data/lib.rs"],
    enabled: false,
    host_supported: false,
    no_stdlibs: true,
    prefer_rlib: true,
    stdlibs: [
        "libcompiler_builtins.rust_sysroot",
        "libcore.rust_sysroot",
    ],
    target: {
        android_arm64: {
            enabled: true,
        },
    },
    apex_available: ["//apex_available:anyapex"],
}
